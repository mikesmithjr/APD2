<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#008080"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewLogEntry" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="@string/today_s_date_"/>
	    <EditText 
	        android:id="@+id/dateField"
	        android:layout_width="match_parent"
	        android:inputType="date"
	        android:layout_height="wrap_content"
	        android:hint="@string/date_hint"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="@string/current_time_"/>
	    <EditText 
	        android:id="@+id/timeField"
	        android:layout_width="match_parent"
	        android:inputType="time"
	        android:layout_height="wrap_content"
	        android:hint="@string/time_hint"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="@string/blood_sugar_reading_"/>
	    <EditText 
	        android:id="@+id/sugarCountField"
	        android:layout_width="match_parent"
	        android:inputType="number"
	        android:layout_height="wrap_content"
	        android:hint="@string/reading_hint"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="@string/reason_for_entry_"/>
	    <EditText 
	        android:id="@+id/reasonField"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/reason_hint"/>
    </LinearLayout>
    
    <Button 
		    android:id="@+id/saveLogEntry"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="100dp"
		    android:background="@android:color/darker_gray"
		    android:text="@string/save_log_entry"
		    android:textColor="@android:color/white"/>

</LinearLayout>
